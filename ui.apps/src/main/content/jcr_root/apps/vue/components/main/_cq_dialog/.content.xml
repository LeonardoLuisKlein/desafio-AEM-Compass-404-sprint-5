<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="nt:unstructured"
    jcr:title="Main properties" sling:resourceType="cq/gui/components/authoring/dialog"
    mode="edit" helpPath="style-guide.html#compare-rows-services">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Title Style"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <mainTitleText
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Title Text"
                            name="./mainTitleText"/>
                            <idTitle
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="ID Title"
                            name="./mainTitleId"/>
                            <colorTitle
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                            fieldLabel="Color"
                            name="./colorTitleMain"/>
                            <fontTitle cq-msm-lockable="./fontTitleMain"
                            defaultValue="Space Mono"
                            fieldLabel="Select a font-family:"
                            jcr:primaryType="nt:unstructured"
                            name="./fontTitleMain"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            value="false">
                            <items jcr:primaryType="nt:unstructured">
                            <Inconsolata jcr:primaryType="nt:unstructured" text="Inconsolata" value="Inconsolata"/>
                            <Montserrat jcr:primaryType="nt:unstructured" text="Montserrat" value="Montserrat"/>
                            <SpaceMono jcr:primaryType="nt:unstructured" text="Space Mono" value="Space Mono"/>
                                    </items>
                                </fontTitle>
                        </items>
                    </column>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="nt:unstructured"
                jcr:title="Text Style"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                    <mainText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Text"
                                    name="./mainText"/>
                                    <mainTextId
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Text Id"
                                    name="./mainId"/>
                                    <colorText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                    fieldLabel="Color"
                                    name="./colorTextMain"/>
                                    <fontText cq-msm-lockable="./fontTitleMain"
                                    defaultValue="Space Mono"
                                    fieldLabel="Select a font-family:"
                                    jcr:primaryType="nt:unstructured"
                                    name="./fontTitleMain"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    value="false">
                                    <items jcr:primaryType="nt:unstructured">
                                    <Inconsolata jcr:primaryType="nt:unstructured" text="Inconsolata" value="Inconsolata"/>
                                    <Montserrat jcr:primaryType="nt:unstructured" text="Montserrat" value="Montserrat"/>
                                    <SpaceMono jcr:primaryType="nt:unstructured" text="Space Mono" value="Space Mono"/>
                                            </items>
                                        </fontText>
                                    </items>
                    </column>
                </items>
            </tab2>
             <tab3
                jcr:primaryType="nt:unstructured"
                jcr:title="Button Style"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <buttonText
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Button Text"
                            name="./mainButtonText"/>
                            <buttonId
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Button Id"
                            name="./mainButtonId"/>
                            <buttonColor
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                            fieldLabel="Color"
                            name="./mainButton"/>
                            </tab3> 
                        </items>
                    </column>
                </items>
            </tab3>
        </items>
    </content>
</jcr:root>